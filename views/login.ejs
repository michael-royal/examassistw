<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body id="creep">
    <div class="contined">

      <% if (errormsg) { %>
        <div class="card bg-white border-danger text-danger p-3 mt-5 text-center" id="loss"><%= errormsg %></div>
      <% } %>
      
      <div class="card text-warning p-2 w-70 mt-5 mb-3 text-center bg-white border-warning">
        
      </div>
     
  
      <form class="main_form" method="post" action="/user_logged_in">
          <div >
            <div >
              <label for="email">Email</label>
              <input type="email" id="emailed" name="email">
            </div>
            <div>
              <label for="password">Password</label>
              <input type="password"id="passworded" name="password" placeholder="********">
            </div>
          </div>
          
          <button type="submit" id="loginbtn">Log in</button>
      </form>

       <div class="haves">
          <hr>
          <p >Don't Have an Account</p>
          <button  id="signup"><a href="/login_signup" class=" text-decoration-none">Sign-Up</a></button>
       </div>
  
    </div>


    <%- include('./partials/header.ejs') %>
   
<script src="/javascript/signup.js"></script>
<script src="/javascript/navtoggle.js"></script>

<script>
  const loss = document.getElementById('loss')

  setTimeout(() => {
    loss.style.display = 'none'
  }, 3000);
</script>
</body>
</html>